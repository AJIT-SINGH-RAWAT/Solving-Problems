Missing a point Problem

problemlink- https://www.codechef.com/JULY20B/problems/PTMSSNG

Solution

#include<bits/stdc++.h>
#define endl "\n"
#define ll long long
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
     int n;cin>>n;
     map<int,int>mx;
     map<int,int>my;
     for (int i=0;i<4*n-1;i++){
     	int x,y;cin>>x>>y;
     	mx[x]++;
     	my[y]++;
     }
    int ansx=0,ansy=0;
     for(auto x:mx){
      if (x.second%2==1)
      	ansx=x.first;
     }
      for(auto x:my){
      if (x.second%2==1)
      	ansy=x.first;
     }
     cout<<ansx<<" "<<ansy<<endl;


     }
    return 0;

}
  
